<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test No Embed Screenshots Suite" parallel="methods" thread-count="2">
    
    <!-- Browser Configuration -->
    <parameter name="browser.name" value="chrome"/>
    <parameter name="cs.browser.headless" value="true"/>
    
    <!-- Environment Configuration -->
    <parameter name="environment.name" value="qa"/>
    
    <!-- Disable ADO integration to prevent hanging -->
    <parameter name="cs.azure.devops.enabled" value="false"/>
    
    <!-- BDD Configuration -->
    <parameter name="cs.bdd.features.path" value="features/orangehrm-simple-tests.feature"/>
    <parameter name="cs.bdd.stepdefs.packages" value="com.orangehrm.stepdefs"/>
    <parameter name="cs.bdd.scenario.tags" value="@deliberate-failure"/>
    
    <!-- Disable embedded screenshots to test file-based approach -->
    <parameter name="cs.report.screenshots.embed" value="false"/>
    
    <test name="No Embed Screenshots Test">
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>