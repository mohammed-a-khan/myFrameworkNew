<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Akhan Application Test Suite" verbose="2">
    <!-- Browser Configuration -->
    <parameter name="browser.name" value="chrome"/>
    <parameter name="cs.browser.headless" value="false"/>
    
    <!-- Environment Configuration -->
    <parameter name="environment.name" value="sit"/>
    
    <test name="Akhan Application Tests">
        <!-- BDD Configuration -->
        <parameter name="cs.bdd.features.path" value="features/akhan-application.feature"/>
        <parameter name="cs.bdd.stepdefs.packages" value="com.akhan.stepdefs"/>
        <parameter name="cs.bdd.tags" value=""/>
        <parameter name="cs.bdd.exclude.tags" value=""/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
</suite>