<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Simple Browser Switching Test" parallel="none">
    
    <!-- Browser Configuration -->
    <parameter name="browser.name" value="chrome"/>
    <parameter name="cs.browser.headless" value="true"/>
    
    <!-- Environment Configuration -->
    <parameter name="environment.name" value="qa"/>
    
    <!-- Disable ADO integration -->
    <parameter name="cs.azure.devops.enabled" value="false"/>
    
    <!-- BDD Configuration for Simple Browser Switching -->
    <parameter name="cs.bdd.features.path" value="features/simple-browser-switching.feature"/>
    <parameter name="cs.bdd.stepdefs.packages" value="com.orangehrm.stepdefs"/>
    
    <test name="Simple Browser Switching Test">
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>