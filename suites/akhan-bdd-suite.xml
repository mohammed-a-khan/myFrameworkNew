<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Akhan BDD Test Suite" verbose="1" parallel="false">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="sit"/>
    <parameter name="headless" value="true"/>
    
    <!-- BDD Test Runner -->
    <test name="Akhan BDD Tests">
        <parameter name="cs.bdd.features.path" value="features/akhan.feature"/>
        <parameter name="cs.bdd.stepdefs.packages" value="com.akhan.stepdefs"/>
        <parameter name="cs.bdd.tags" value="@login"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>