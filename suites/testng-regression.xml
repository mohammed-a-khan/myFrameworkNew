<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CS Framework Regression Tests" parallel="tests" thread-count="3" verbose="2">
    
    <!-- Full regression test suite with parallel execution -->
    <test name="Core Module Tests">
        <parameter name="featuresPath" value="features/employee-management.feature,features/leave-management.feature"/>
        <parameter name="tags" value="@regression"/>
        <parameter name="excludeTags" value="@ignore,@manual"/>
        <parameter name="stepDefPackages" value="com.orangehrm.stepdefs"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <test name="Performance Module Tests">
        <parameter name="featuresPath" value="features/performance-review.feature"/>
        <parameter name="tags" value="@regression"/>
        <parameter name="excludeTags" value="@ignore"/>
        <parameter name="stepDefPackages" value="com.orangehrm.stepdefs"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <test name="Recruitment Module Tests">
        <parameter name="featuresPath" value="features/recruitment-process.feature"/>
        <parameter name="tags" value="@regression"/>
        <parameter name="excludeTags" value="@ignore"/>
        <parameter name="stepDefPackages" value="com.orangehrm.stepdefs"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>