<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Akhan Comprehensive Test Suite" verbose="2" parallel="none">
    <!-- Global Configuration -->
    <parameter name="browser.name" value="chrome"/>
    <parameter name="browser.headless" value="false"/>
    <parameter name="browser.window.maximize" value="true"/>
    <parameter name="environment.name" value="sit"/>
    
    <!-- Akhan Specific Configuration -->
    <parameter name="app.base.url" value="https://akhan-ui-sit.myshare.net/"/>
    <parameter name="implicit.wait" value="10"/>
    <parameter name="explicit.wait" value="30"/>
    <parameter name="page.load.timeout" value="30"/>
    
    <!-- Screenshot Configuration -->
    <parameter name="screenshot.on.failure" value="true"/>
    <parameter name="screenshot.on.pass" value="false"/>
    
    <!-- Report Configuration -->
    <parameter name="report.name" value="Akhan Application Test Report"/>
    <parameter name="report.title" value="Akhan Comprehensive Test Results"/>
    
    <!-- Basic Akhan Tests -->
    <test name="Akhan Basic Tests" preserve-order="true">
        <parameter name="cs.feature.path" value="features/akhan-application.feature"/>
        <parameter name="cs.step.packages" value="com.akhan.stepdefs"/>
        <parameter name="tags" value="@login,@navigation"/>
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Comprehensive Tests with All Features -->
    <test name="Akhan Comprehensive Tests">
        <parameter name="cs.feature.path" value="features/akhan-comprehensive.feature"/>
        <parameter name="cs.step.packages" value="com.akhan.stepdefs,com.orangehrm.stepdefs"/>
        <parameter name="tags" value="@comprehensive"/>
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Parallel Module Navigation Tests -->
    <test name="Akhan Module Navigation - Parallel" parallel="methods" thread-count="3">
        <parameter name="cs.feature.path" value="features/akhan-comprehensive.feature"/>
        <parameter name="cs.step.packages" value="com.akhan.stepdefs,com.orangehrm.stepdefs"/>
        <parameter name="tags" value="@module-navigation"/>
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Data-Driven ESSS Search Tests -->
    <test name="Akhan ESSS Search - Data Driven">
        <parameter name="cs.feature.path" value="features/akhan-comprehensive.feature"/>
        <parameter name="cs.step.packages" value="com.akhan.stepdefs,com.orangehrm.stepdefs"/>
        <parameter name="tags" value="@esss-search,@data-driven"/>
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Performance Tests -->
    <test name="Akhan Performance Tests">
        <parameter name="cs.feature.path" value="features/akhan-comprehensive.feature"/>
        <parameter name="cs.step.packages" value="com.akhan.stepdefs,com.orangehrm.stepdefs"/>
        <parameter name="tags" value="@performance"/>
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Error Handling Tests -->
    <test name="Akhan Error Scenarios">
        <parameter name="cs.feature.path" value="features/akhan-comprehensive.feature"/>
        <parameter name="cs.step.packages" value="com.akhan.stepdefs,com.orangehrm.stepdefs"/>
        <parameter name="tags" value="@error-handling"/>
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
</suite>