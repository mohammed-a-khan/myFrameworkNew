<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Akhan Comprehensive Test Suite" verbose="2" parallel="tests" thread-count="2">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="SIT"/>
    <parameter name="headless" value="false"/>
    <parameter name="screenshot.on.failure" value="true"/>
    <parameter name="azure.devops.enabled" value="true"/>
    
    <!-- Smoke Tests -->
    <test name="Akhan Smoke Tests">
        <parameter name="cucumber.features" value="features/akhan-comprehensive-framework-demo.feature"/>
        <parameter name="cucumber.glue" value="com.akhan.stepdefs"/>
        <parameter name="cucumber.tags" value="@smoke"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Data-Driven Tests -->
    <test name="Akhan Data-Driven Tests">
        <groups>
            <run>
                <include name="data-driven"/>
            </run>
        </groups>
        
        <classes>
            <class name="com.akhan.tests.AkhanDataDrivenTest">
                <methods>
                    <include name="testLoginWithCsvData"/>
                    <include name="testSearchWithJsonData"/>
                    <include name="testRoleBasedAccess"/>
                    <include name="testWithPropertiesData"/>
                    <include name="testPropertySubstitution"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Navigation Tests -->
    <test name="Akhan Navigation Tests">
        <parameter name="cucumber.tags" value="@navigation or @module-navigation"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Search and Validation Tests -->
    <test name="Akhan Search Tests">
        <parameter name="cucumber.tags" value="@search-validation or @data-driven-csv or @data-driven-json"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Performance Tests -->
    <test name="Akhan Performance Tests">
        <parameter name="cucumber.tags" value="@performance"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
    <!-- Negative Tests -->
    <test name="Akhan Negative Tests">
        <parameter name="cucumber.tags" value="@negative"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>