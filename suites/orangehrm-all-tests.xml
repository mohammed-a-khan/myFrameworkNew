<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM All Tests Suite" parallel="methods" thread-count="3">
    
    <parameter name="browser.name" value="chrome"/>
    <parameter name="browser.headless" value="false"/>
    <parameter name="environment.name" value="qa"/>
    
    <!-- Configure to run ALL scenarios in the feature file -->
    <parameter name="featuresPath" value="features/orangehrm-simple-tests.feature"/>
    <parameter name="stepDefPackages" value="com.orangehrm.stepdefs"/>
    <!-- No cucumber tag filter - will run all scenarios -->
    
    <test name="OrangeHRM All Tests">
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>