<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Azure DevOps BDD Test Suite" verbose="2" parallel="none">
    
    <!-- Browser Configuration -->
    <parameter name="browser.name" value="chrome"/>
    <parameter name="cs.browser.headless" value="false"/>
    
    <!-- Environment Configuration -->
    <parameter name="environment.name" value="qa"/>
    
    <!-- BDD Configuration -->
    <parameter name="cs.bdd.features.path" value="features/ado-mapped-tests-multiple.feature"/>
    <parameter name="cs.bdd.stepdefs.packages" value="com.orangehrm.stepdefs"/>
    <parameter name="cs.bdd.tags" value=""/>
    <parameter name="cs.bdd.exclude.tags" value=""/>
    
    <!-- Azure DevOps Configuration -->
    <parameter name="cs.azure.devops.enabled" value="true"/>
    
    <!-- Test configuration for Azure DevOps BDD tests -->
    <!-- CSBDDRunner will automatically detect ADO tags from feature files -->
    <!-- ADO IDs will be extracted from feature/scenario tags with this priority: -->
    <!-- 1. Feature/Scenario tags 2. Suite XML (optional) 3. application.properties -->
    <test name="ADO BDD Tests">
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
</suite>