<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Failure Test Suite" parallel="methods" thread-count="2" data-provider-thread-count="2">
    
    <parameter name="browser.name" value="chrome"/>
    <parameter name="browser.headless" value="false"/>
    <parameter name="environment.name" value="qa"/>
    
    <!-- Configure to run only the failing scenario -->
    <parameter name="featuresPath" value="features/orangehrm-simple-tests.feature"/>
    <parameter name="stepDefPackages" value="com.orangehrm.stepdefs"/>
    <parameter name="cucumberOptions" value="--tags @deliberate-failure"/>
    
    <test name="OrangeHRM Failure Test">
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>