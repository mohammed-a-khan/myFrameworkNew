<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CS Framework Smoke Tests" parallel="false" verbose="2">
    
    <!-- Smoke test suite - runs only critical @smoke tagged scenarios -->
    <test name="Smoke Tests">
        <parameter name="featuresPath" value="features"/>
        <parameter name="tags" value="@smoke"/>
        <parameter name="excludeTags" value="@ignore,@wip"/>
        <parameter name="stepDefPackages" value="com.orangehrm.stepdefs"/>
        
        <classes>
            <class name="com.testforge.cs.bdd.CSBDDRunner"/>
        </classes>
    </test>
    
</suite>