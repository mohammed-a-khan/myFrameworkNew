# CS TestForge Framework Configuration
# =====================================
# This file contains all configuration properties for the CS TestForge framework
# Properties can be overridden via system properties: -Dproperty.name=value
# All properties follow the cs.* prefix convention for standardization

# ================================
# Application Settings
# ================================
cs.app.name=CS TestForge Framework
cs.app.version=1.0.0
cs.app.base.url=https://opensource-demo.orangehrmlive.com

# ================================
# Browser Configuration
# ================================
# Browser to use for testing (chrome, firefox, edge, safari)
cs.browser.name=chrome
cs.browser.headless=false
cs.browser.maximize=true
cs.browser.delete.cookies=true
cs.browser.implicit.wait=10
cs.browser.explicit.wait=30
cs.browser.page.load.timeout=60
cs.browser.window.width=1920
cs.browser.window.height=1080
cs.browser.download.directory=target/downloads

# Browser Instance Management
# true = reuse same browser instance for all tests in a thread (faster, default)
# false = create new browser instance for each test (cleaner state, slower)
cs.browser.reuse.instance=true

# Chrome Options
cs.chrome.disable.notifications=true
cs.chrome.disable.infobars=true
cs.chrome.start.maximized=true
cs.chrome.disable.gpu=false

# Firefox Options
cs.firefox.disable.notifications=true
cs.firefox.private.browsing=false

# Edge Options
cs.edge.disable.notifications=true
cs.edge.start.maximized=true

# Internet Explorer Options
# IMPORTANT: IE requires specific Windows configuration
cs.ie.ignore.security.domains=true
cs.ie.ignore.zoom=true
cs.ie.ignore.protected.mode=true
cs.ie.require.window.focus=false
cs.ie.enable.persistent.hovering=false
cs.ie.native.events=false
cs.ie.ensure.clean.session=true
cs.ie.enable.javascript=true
cs.ie.page.load.strategy=normal

# ================================
# Proxy Configuration
# ================================
# Enable proxy for WebDriverManager (for downloading drivers)
cs.proxy.enabled=false
cs.proxy.host=
cs.proxy.port=
cs.proxy.username=
cs.proxy.password=
cs.proxy.nonProxyHosts=localhost,127.0.0.1

# ================================
# Wait & Timeout Configuration
# ================================
cs.wait.timeout=15
cs.wait.polling=500
cs.wait.implicit=10
cs.wait.pageload.timeout=30
cs.wait.script.timeout=30

# Remote WebDriver URL (for grid execution)
# cs.selenium.remote.url=http://localhost:4444/wd/hub

# ================================
# Environment Configuration
# ================================
cs.environment.name=qa
cs.env.qa.url=https://qa.example.com
cs.env.staging.url=https://staging.example.com
cs.env.prod.url=https://prod.example.com

# Environment Collection Settings
cs.environment.auto.collect.suite.start=true
cs.environment.auto.collect.test.failure=true
cs.environment.cache.expiration.ms=300000
cs.environment.collect.network=true
cs.environment.collect.performance=true
cs.environment.collect.security=false
cs.environment.collect.sensitive=false
cs.environment.comparison.enabled=true
cs.environment.exclude.properties=password,token,secret,key
cs.environment.export.html=true
cs.environment.export.json=true
cs.environment.include.commands=java -version,mvn -version
cs.environment.include.in.reports=true
cs.environment.output.directory=target/environment
cs.environment.periodic.collection.enabled=false
cs.environment.periodic.collection.interval.minutes=30

# ================================
# AKhan Application Settings
# ================================
cs.akhan.url=https://akhan-ui-sit.myshare.net/
cs.akhan.environment=SIT
cs.akhan.user.default=testuser
cs.akhan.password.default=testpass
cs.akhan.performance.pageload=10000
cs.akhan.performance.total=30000

# ================================
# Azure DevOps Integration
# ================================
cs.azure.devops.enabled=true
cs.azure.devops.organization=mdakhan
cs.azure.devops.organization.url=https://dev.azure.com/mdakhan
cs.azure.devops.project=myproject

