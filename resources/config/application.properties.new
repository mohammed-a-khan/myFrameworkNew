# Test Configuration
cs.azure.devops.test.plan.id=417
cs.azure.devops.test.suite.id=418
cs.azure.devops.build.id=
cs.azure.devops.release.id=
cs.azure.devops.environment=
cs.azure.devops.run.name=
cs.azure.devops.automated=true

# Upload Settings
cs.azure.devops.upload.attachments=true
cs.azure.devops.upload.screenshots=true
cs.azure.devops.upload.videos=false
cs.azure.devops.upload.logs=true
cs.azure.devops.update.testcases=false
cs.azure.devops.create.bugs.on.failure=false

# Bug Template
cs.azure.devops.bug.title.template=Test Failed: {testName}
cs.azure.devops.bug.assigned.to=
